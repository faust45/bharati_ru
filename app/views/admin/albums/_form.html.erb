<%= simple_form_for [:admin, album], :url => url, :html => {:multipart => true, :method => form_method} do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tracks, :as => :sort_tracks %>

  <%= f.input :cover, :as => :attachment, :img => true %>
  <%= f.submit 'save' %>
<% end %>


