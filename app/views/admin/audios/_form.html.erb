<%= include_js('application', 'app_autocomplete', 
               'jquery.autocomplete', 'jquery.ui.autocomplete.ext', 
               'jquery.templating', 'jquery.dimensions', 
               'prettify/prettify', 'jcalendar-source', 'edit_albums') %>
<% content_for(:include_js) do %>
  <%= include_tiny_mce_js %>
<% end %>
<%= tiny_mce_init %>

<%= simple_form_for [:admin, form_adapter], :url => url, :html => {:multipart => true, :method => form_method} do |f| %>
  <%= f.input :is_published, :as => :boolean, :label_wrap => false %>
  <%= f.input :title %>
  <%= f.input :author,       :as => :autocomplete %>
  <%= f.input :record_place, :as => :autocomplete %>
  <%= f.input :record_date,  :as => :date, :include_blank => true, :start_year => 1900 %>

  <%= f.input :albums, :as => :albums %>
  <%= f.input :tags,   :as => :tags_autocomplete  %>

  <%= f.input :source, :as => :attachment %>
  
  <%= f.input :description, :as => :text, :input_html => { :class => 'mceEditor', :cols => 70 } %>
  <%= f.submit 'save' %>
<% end %>
