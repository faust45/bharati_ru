<%= include_js('application', 'app_autocomplete', 
               'jquery.autocomplete', 'jquery.ui.autocomplete.ext', 
               'jquery.templating', 'jquery.dimensions', 
               'prettify/prettify', 'jcalendar-source', 'edit_albums', 'replace_mp3', 'admin/audio_form_nav') %>


<% context_nav do %>
  <%= render :partial => 'context_nav' %>
<% end %>

<%= simple_form_for [:admin, form_adapter], :url => url, :html => {:multipart => true, :method => form_method} do |f| %>
  <div class="tab active">
    <%= f.input :is_published, :as => :boolean, :label_wrap => false %>
    <%= f.input :title %>
    <%= f.input :author_id,   :as => :author_select %>
    <%= f.input :record_date, :as => :date, :include_blank => true, :start_year => 1900 %>
    <%= f.input :tags,   :as => :tags_autocomplete %>
    <%= f.input :description, :as => :text   %>
  </div>

  <div class="tab">
    <%= f.input :bookmarks_raw, :as => :text %>
  </div>

  <div class="tab">
    <%= f.input :photos, :as => :img_attachments %>
  </div>

  <div id="add_to" class="tab">
    <%= f.input :albums, :as => :albums %>
  </div>

  <div id="source_file" class="tab">
    <%= f.input :source, :as => :mp3_attachment %>
  </div>

  <%= f.submit 'save' %>
<% end %>
