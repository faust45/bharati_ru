<div class="trackAuthor">
  <div class="trackPhoto"><%= track_img %></div>
  <div class="trackInfo">
    <div class="author"><span>Автор:</span> <%= link_to author_name, link_to_teacher(@current_track.author)  %></div>
    <div class="tags"><%= tags %></div>

    <div class="download"><%= link_to "<b>&#160;</b><i>&#160;</i>скачать этот трек (#{source_size(@current_track)})".html_safe, file_url(@current_track.source) %></div>
  </div>
</div>
<% content_for :image_src do %>
  <link rel="image_src" type="image/jpeg" href="<%= track_img_url %>" />
<% end %>
