<div class="trackAuthor">
  <div class="trackPhoto"><%= photo_thumb_round(@current_track.main_photo, {:height => 300, :width => 300}) %></div>
  <div class="trackInfo">
    <% if @current_track.author_display_name %>
      <div class="author"><span>Автор:</span> <a href="/about/author/BharatiMj"><%= @current_track.author_display_name %></a></div>
    <% end %>

    <% if @current_track.translate_by %>
      <div class="author"><span>Переводчик:</span><%= @current_track.translate_by %></div>
    <% end %>

    <% if @current_track.read_by %>
      <div class="author"><span>Текст читает:</span><%= @current_track.read_by %></div>
    <% end %>

    <% if @current_track.muz_by %>
      <div class="author"><span>Муз. оформление:</span><%= @current_track.muz_by %></div>
    <% end %>

    <div class="download"><%= link_to "<b>&#160;</b><i>&#160;</i>скачать этот трек (#{source_size(@current_track)})".html_safe, file_url(@current_track.source) %></div>
  </div>
</div>
