<%= render :partial => 'author_sidebar' %>

<div class="trackAuthor lecture">
  <div class="trackPhoto"><%= random_author_photo(@author) %></div>
  <div class="trackInfo center">
  </div>
</div>

<div class="block update">
  <div class="tabs">
    <ul>
      <li><a class="active" href="#"><b></b><u>Последнее</u><i></i></a></li>
      <li><a href="#"><b></b><u>Альбомы</u><i></i></a></li>

      <li><a href="#"><b></b><u>По годам</u><i></i></a></li>
    </ul>
  </div>
  <div class="tab-container lastTab active" id="tab-1">
    <%= render :partial => 'author_last_item', :collection => @last_tracks %>
    <%= pages(@last_tracks) %>
  </div>
  <div class="tab-container audioTab" id="tab-2">
    <%= render :partial => 'album_item', :collection => @albums %>
  </div>
  <div class="tab-container yearsTab" id="tab-3">
    <% @years.reverse_each do |year, count| %>
      <%= render :partial => 'year_item', :locals => {:year => year, :count => count} %>
    <% end %>
  </div>

  <div class="bottom"></div>
</div>
