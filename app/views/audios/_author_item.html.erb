<% if is_selected_author?(author_item) %>
  <li>
    <strong>
      <%= author_thumb(author_item.main_photo) %>
      <span><%= author_item.display_name %></span>
    </strong>
  </li>
<% else %>
  <li>
    <% if author_item.main_photo.thumbs %>
      <%= link_to(image_tag(author_item.main_photo.thumbs['small']['url'], :width => "88", :height => "119") + "<span>#{author_item.display_name}</span>".html_safe,
        author_audios_path(author_item))
      %>
    <% end %>
  </li>
<% end %>
