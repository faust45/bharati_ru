<div class="item">
  <a href="<%= show_video(video_item) %>"><img src="<%= video_item.thumbnail_small %>"></a>
  <div class="name"><%= link_to video_item.title, show_video(video_item) %></div>
  <p>Лекция от <%= d video_item.record_date %> года <%= video_item.author.display_name %></p>
  <div class="date"><%= d video_item.upload_at %></div>
</div>
