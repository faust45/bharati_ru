<% sidebar do %>
  <div class="block lect">
    <div class="title">О сайте</div>
    <div class="text">
      <div class="all-pivot">
        <% menu_glance_next(:icon => :about_icon, :partial => 'book_type') do |m| %>
          <%= m.about(About.bharati_ru) %>
          <%= m.about_ychenie(About.ychenie)   %>
          <%= m.about_to_start(About.to_start) %>
        <% end %>
      </div>
    </div>
    <div class="bottom"></div>
  </div>

  <div class="block lect aboutsite">
    <div class="title">О проповедниках</div>
    <div class="text">
      <div class="all-pivot">
        <% menu_glance_next(:icon => :author_main_photo, :text => :display_name, :partial => 'book_type') do |m| %>
          <%= m.about_author authors %>
        <% end %>
      </div>
    </div>
    <div class="bottom"></div>
  </div>
<% end %>
